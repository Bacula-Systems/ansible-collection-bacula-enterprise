{# This configuration will be included in the Director bacula-dir.conf file #}
Job {
  Name = "{{ fdplugin }}-All-{{ client_name }}-job"
  JobDefs = {{ jobdefs_name }}
  Client = {{ client_name }}
  FileSet = {{ fdplugin }}-All-{{ client_name }}-fileset
  Schedule = Manual
  Accurate = yes
}

FileSet {
  Name = "{{ fdplugin }}-All-{{ client_name }}-fileset"
  Include {
    Options {
      Signature = MD5
    }
    Plugin = "azure-vm: tenant_id=<tenant_id> subscription_id=<subscription_id> connection_key=DefaultEndpointsProtocol=https;AccountName=example;AccountKey=<accountkeyvalue>;EndpointSuffix=core.windows.net"
  }
}
